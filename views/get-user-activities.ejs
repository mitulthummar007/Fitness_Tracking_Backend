<!DOCTYPE html>
<html>

<head>
    <title>User Activities</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body,
        h1,
        h2,
        p,
        ul {
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            color: #333;
            text-align: center;
        }

        h1 {
            background-color: #0077b6;
            color: #fff;
            padding: 10px;
        }

        form {
            margin-top: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input[type="text"] {
            width: 300px;
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-right: 10px;
            font-size: 16px;
        }

        button {
            background-color: #0077b6;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

        button:hover {
            background-color: #005b8e;
        }

    </style>
</head>

<body>
    <div class="m-4">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav">
                        <a href="/dashboard" class="nav-item nav-link active">Home</a>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle"  id="activityDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Activities
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="activityDropdown">
                                <li><a class="dropdown-item" href="/add-activities">Add Activity</a></li>
                                <li><a class="dropdown-item" href="/get-activities">Get All Activities</a></li>
                                <li><a class="dropdown-item" href="/get-user-activities">Get User Activity</a></li>
                            </ul>
                        </li>
                        <a href="/about" class="nav-item nav-link">About</a>
                    </div>
                </div>
            </div>
        </nav>
    </div>
        <h1>User Activities</h1>
    <form action="/get-user-activities" method="get">
        <label for="username">Enter Username:</label>
        <input type="text" name="username" id="username" required>
        <button type="submit">Search</button>
    </form>

    <% if (data) { %>
        <h2>User Information</h2>
        <p>Username: <%= data.username %>
        </p>
        <p>Email: <%= data.email %>
        </p>
        <p>Name: <%= data.name %>
        </p>
        <p>Age: <%= data.age %>
        </p>
        <p>Weight: <%= data.weight %>
        </p>
        <h2>Fitness Goals</h2>
        <ul>
            <% data.fitnessGoals.forEach(function(goal) { %>
                <li>
                    <%= goal %>
                </li>
                <% }); %>
        </ul>
        <h2>Progress</h2>
        <p>Weight Loss: <%= data.progress.weightLoss %>
        </p>
        <p>Muscle Gain: <%= data.progress.muscleGain %>
        </p>
        <p>Marathon Running: <%= data.progress.marathonRunning ? 'Yes' : 'No' %>
        </p>
        <h2>Additional Information</h2>
        <p>Heart Rate: <%= data.heartRate %>
        </p>
        <p>Sleep Pattern: <%= data.sleepPattern %>
        </p>
        <p>Calorie Consumption: <%= data.calorieConsumption %>
        </p>
        <p>Fitness Level: <%= data.fitnessLevel %>
        </p>
        <% } else { %>
            <p>No user data found for the provided username.</p>
            <% } %>
</body>

</html>